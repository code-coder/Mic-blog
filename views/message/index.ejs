<%- include ../header %>
<div class="container" >
  <ol class="breadcrumb">
    <li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
      <a href="/" itemprop="url">
        <span itemprop="title">Home</span>
      </a>
    </li>
    <li component="breadcrumb/current" itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb" class="active">
        <span itemprop="title">消息</span>
    </li>
  </ol>
  <div class="message-container" style="margin-left:10%"> 
  <div class="panel">
    <div class='header'>
      <span class='col_fade'>新信息</span>
    </div>
<% if (typeof(hasnot_read_messages) !== 'undefined' && hasnot_read_messages.length > 0) { %>
    <!-- 显示新消息-->
    <% hasnot_read_messages.forEach(function (message, index) {%>
      <% if (message.has_read) { %>
        <div class='cell' message_id='<%= message._id %>'>
        <% } else { %>
        <div class='cell message' message_id='<%= message._id %>'>
          <% } %>
          <% if(message.type == 'reply'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            回复了你的话题
            <a href="/t/<%= message.talk._id%>" target='_blank'><%= message.talk.content %></a>
          </span>
          <% } %>
          <% if(message.type == 'reply2'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            在话题
            <a href="/t/<%= message.talk._id %>" target='_blank'></a>
            中回复了你的回复
          </span>
          <% } %>
          <% if(message.type == 'follow'){ %>
        <span>
          <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
          关注了你
        </span>
          <% } %>
          <% if (message.type == 'at'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            在话题
            <a href="/t/<%= message.talk._id %>" target='_blank'></a>
            中@了你
          </span>
          <% } %>
          <% if (message.type == 'up'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            赞了你的说说
            <a href="/t/<%= message.talk._id %>" target='_blank'><%= message.talk.content %></a>  
          </span>
          <% } %>
        </div>
      <% }) %>
    <!--显示新消息结束-->
    <% } else { %>
    <div class='inner'>
      <p>无消息</p>
    </div>
    <% } %>
</div>
  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>过往信息</span>
    </div>
    <% if (typeof(has_read_messages) !== 'undefined' && has_read_messages.length > 0) { %>
    <!-- 显示已读消息-->
    <% has_read_messages.forEach(function (message, index) {%>
    <% if (message.has_read) { %>
        <div class='cell' message_id='<%= message._id %>'>
        <% } else { %>
        <div class='cell message' message_id='<%= message._id %>'>
          <% } %>
          <% if(message.type == 'reply'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            回复了你的话题
            <a href="/t/<%= message.talk._id%>" target='_blank'><%= message.talk.content %></a>
          </span>
          <% } %>
          <% if(message.type == 'reply2'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            在话题
            <a href="/t/<%= message.talk._id %>" target='_blank'></a>
            中回复了你的回复
          </span>
          <% } %>
          <% if(message.type == 'follow'){ %>
        <span>
          <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
          关注了你
        </span>
          <% } %>
          <% if (message.type == 'at'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            在话题
            <a href="/t/<%= message.talk._id %>" target='_blank'></a>
            中@了你
          </span>
          <% } %>
          <% if (message.type == 'up'){ %>
          <span>
            <a href="/u/<%= message.author.name %>" target='_blank'><%= message.author.name %></a>
            赞了你的说说
            <a href="/t/<%= message.talk._id %>" target='_blank'><%= message.talk.content %></a>  
          </span>
          <% } %>
        </div>

    <% }) %>
    <!--显示已读消息结束-->
    <% } else { %>
    <div class='inner'>
      <p>无消息</p>
    </div>
    <% } %>
  </div>
</div>
</div>
</div>
<%- include ../footer %>