<%- include ../header %>
<div class="container">
<ol class="breadcrumb">
    <li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
    <a href="/" itemprop="url">
      <span itemprop="title">Home</span>
    </a>
  </li>
  <li component="breadcrumb/current" itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb" class="active">
      <span itemprop="title">修改密码</span>
  </li>
</ol>
<div class="register bgc">
  <div class="col-md-6">
    <div class="well well-lg">
      <form  class="form-horizontal" role="form" action="/resetPass" method="post">
        <div class="form-group">
          <label for="password" class="col-lg-4 control-label">旧密码</label>
          <div class="col-lg-8">
            <div class="input-group">
              <input class="form-control" required="required" type="password" name="re_password">
              <span class="input-group-addon">
                <span id="password-notify"><i class="icon-circle-blank"></i></span>
              </span>
            </div>
            <span class="help-block">请输入旧密码</span>
          </div>
        </div>
        <div class="form-group">
          <label for="password" class="col-lg-4 control-label">新密码</label>
          <div class="col-lg-8">
            <div class="input-group">
              <input class="form-control" required="required" type="password" name="password">
              <span class="input-group-addon">
                <span id="password-notify"><i class="icon-circle-blank"></i></span>
              </span>
            </div>
            <span class="help-block">请输入6-16位新密码，注意区分大小写</span>
          </div>
        </div>
        <div class="form-group">
          <label for="password-confirm" required="required" class="col-lg-4 control-label">确认密码</label>
          <div class="col-lg-8">
            <div class="input-group">
              <input class="form-control" type="password" name="password_repeat" >
              <span class="input-group-addon">
                <span id="password-confirm-notify"><i class="icon-circle-blank"></i></span>
              </span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="submit" class="col-lg-4 control-label"></label>
          <div class="col-lg-offset-4 col-lg-8">
            <button class="btn btn-primary btn-lg btn-block" type="submit">修改</button>
          </div>
        </div>
        <input id="referrer" type="hidden" name="referrer" value="https://community.nodebb.org/register">
        <input id="token" type="hidden" name="token" value="">
      </form>
    </div>
  </div>
</div>
</div>
<%- include ../footer %>