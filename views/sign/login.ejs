<%- include ../header %>
<div class="container">
<ol class="breadcrumb">
    <li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
    <a href="/" itemprop="url">
      <span itemprop="title">Home</span>
    </a>
  </li>
  <li component="breadcrumb/current" itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb" class="active">
      <span itemprop="title">登录</span>
  </li>
</ol>
<div class="bgc">
	<div class="col-md-6">
		<div class="well well-lg">
			<form  class="form-horizontal" role="form" action="/login" method="post">
				<div class="form-group">
					<label class="col-lg-4 control-label">学号</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" required="required" type="text" placeholder="Enter Username/SchoolNumber/Email" name="sno" id="sno" autocorrect="off" autocapitalize="off" autocomplete="off">
							<span class="input-group-addon">
								<span id="username-notify"><i class="icon-circle-blank"></i></span>
							</span>
						</div>
						<span class="help-block">使用学号、邮箱或者用户名登录</span>
					</div>
				</div>
				<div class="form-group">
					<label for="password" class="col-lg-4 control-label">密码</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" required="required" type="password" placeholder="Enter Password" name="password" id="password">
							<span class="input-group-addon">
								<span id="password-notify"><i class="icon-circle-blank"></i></span>
							</span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="submit" class="col-lg-4 control-label"></label>
					<div class="col-lg-offset-4 col-lg-8">
						<button class="btn btn-primary btn-lg btn-block" id="login" type="submit">登录</button>
					</div>
				</div>
				<input id="referrer" type="hidden" name="referrer" value="https://community.nodebb.org/register">
				<input id="token" type="hidden" name="token" value="">
			</form>
		</div>
	</div>
</div>
</div>
<%- include ../footer %>